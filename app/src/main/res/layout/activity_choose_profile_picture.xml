<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseProfilePictureActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="@null"
        android:fontFamily="@font/helveticanowtext_medium"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        />

    <com.github.abdularis.civ.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/pic_default_profile"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ChoosePictureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_picture"
            android:background="@null"
            android:fontFamily="@font/helveticanowtext_medium"
            android:textAllCaps="false"
            android:layout_marginStart="16dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ChooseLaterBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="@string/choose_later"
            android:background="@null"
            android:fontFamily="@font/helveticanowtext_medium"
            android:textAllCaps="false"
            android:layout_marginEnd="16dp"
            />

    </LinearLayout>

</LinearLayout>