<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/helveticanowtext_regular"
        android:text="@string/reset_password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="14dp"
        android:textColor="@color/akli_gray"
        android:textAlignment="center"
        android:text="@string/akli_reset_password"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1.2">
    </TextView>


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/email"
        android:textColorHint="#5F5F5F"
        android:padding="8dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/bck_sigin_input"
        android:drawableEnd="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:minHeight="48dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="44dp"
        android:textSize="16sp"
        android:fontFamily="@font/helveticanowtext_medium"
        android:textAllCaps="false"
        android:background="@drawable/bck_butt_sing"
        />



</androidx.appcompat.widget.LinearLayoutCompat>