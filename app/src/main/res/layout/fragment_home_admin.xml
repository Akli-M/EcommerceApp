<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".admin.HomeAdminFragment">

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="8dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_All"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/all"
                    android:textColor="@color/chip_text_color_akli"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_Shoes"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtext_regular"
                    android:text="@string/Shoes"
                    android:textColor="@color/chip_text_color_akli"
                    android:textSize="16sp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_T_shirt"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtext_regular"
                    android:text="@string/t_shirt"
                    android:textColor="@color/chip_text_color_akli"
                    android:textSize="16sp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_hoodies"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtext_regular"
                    android:text="@string/hoodies"
                    android:textColor="@color/chip_text_color_akli"
                    android:textSize="16sp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_shorts"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtext_regular"
                    android:text="@string/Short"
                    android:textColor="@color/chip_text_color_akli"
                    android:textSize="16sp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_joggers"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtext_regular"
                    android:text="@string/joggers"
                    android:textColor="@color/chip_text_color_akli"
                    android:textSize="16sp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_jackets"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtext_regular"
                    android:text="@string/jackets"
                    android:textColor="@color/chip_text_color_akli"
                    android:textSize="16sp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_equipment"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtext_regular"
                    android:text="@string/equipment"
                    android:textColor="@color/chip_text_color_akli"
                    android:textSize="16sp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipIconEnabled="false"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/chip_ripple_color" />
            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


    <ImageButton
        android:id="@+id/addProduct"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bc_add_button"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/noProductsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticanowtext_medium"
        android:text="@string/add_you_products_here"
        android:textSize="36sp"
        android:textColor="@color/gray600"
        app:drawableTopCompat="@drawable/ic_shipping_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/black"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
